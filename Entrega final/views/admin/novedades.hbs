<h1>Bienvenidos a novedades</h1>
<div class="countainer" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Hola {{usuario}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion <i
                    class="fas fa-sign-out-alt"></i></a>
        </p>
    </div>
    <div class="row">
        <div class="col-7" style="margin-top: -8px;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>


    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titulo</th>
                <th scope="col" class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each novedades}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td class="text-end">
                    <a href="/admin/novedades/modificar/{{id}} " class="btn btn-secondary"><i
                            class="fas fa-pencil-alt"></i></a>

                    <a href="/admin/novedades/eliminar/{{id}} " class="btn btn-secondary"><i
                            class="fas fa-trash"></i></a>
                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>
</div>